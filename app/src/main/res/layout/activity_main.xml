<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/minus1"
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="@dimen/buttonheight"
            android:background="@drawable/button_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="53dp"
            android:layout_marginBottom="122dp"
            android:contentDescription="Minus Button"
            android:src="@drawable/ic_minus"
            style="@style/MinusButtons"
            android:onClick="decreaseScore"/>

        <TextView
            android:id="@+id/score1"
            style="@style/ScoreText"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="190dp"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp"
            android:layout_marginBottom="136dp"
            android:text="@string/score2" />

        <ImageButton
            android:id="@+id/plus1"
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="@dimen/buttonheight"
            android:background="@drawable/button_background"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="122dp"
            android:layout_marginBottom="122dp"
            android:contentDescription="Plus Button"
            android:src="@drawable/ic_plus"
            android:onClick="increaseScore"
            style="@style/PlusButtons"/>

        <TextView
            android:id="@+id/team1"
            style="@style/TeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="171dp"
            android:layout_marginRight="171dp"
            android:text="@string/team_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/minus2"
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="@dimen/buttonheight"
            android:background="@drawable/button_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="122dp"
            android:contentDescription="Minus Button"
            android:src="@drawable/ic_minus"
            android:onClick="decreaseScore"
            style="@style/MinusButtons"/>

        <TextView
            android:id="@+id/score2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="57dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="134dp"
            android:layout_toLeftOf="@id/plus2"
            android:layout_toRightOf="@id/minus2"
            android:text="@string/score2"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/plus2"
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="@dimen/buttonheight"
            android:background="@drawable/button_background"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="122dp"
            android:contentDescription="Plus Button"
            android:src="@drawable/ic_plus"
            android:onClick="increaseScore"
            style="@style/PlusButtons"/>

        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="173dp"
            android:layout_marginRight="173dp"
            android:text="@string/team_2"
            style="@style/TeamText"/>
    </RelativeLayout>
</LinearLayout>